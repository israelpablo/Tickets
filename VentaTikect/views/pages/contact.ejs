
<%- contentFor('heros')%>
<%- def%>
<%- contentFor('body') %>

<div class="container">
    <div class="row">       
        <div class="col-md-12">
            <div class="well well-sm">
                <form  class="form-horizontal" method="POST">  
                    <fieldset>
                        <h1  class="text-center" >CONTACTANOS</h1>                    
                        <p  class="text-center">LLENA EL FORMULARIO PARA CONTACTARNOS SOBRE CUALQUIER DUDA O COMENTARIO</p>  

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center center"><i class="fa fa-user bigicon"></i></span>
                            <div class="col-md-8 ">
                                <label >Nombre</label>
                                <input name="nombre" type="text" placeholder="Nombre" class="form-control" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center center"><i class="fa fa-user bigicon"></i></span>
                            <div class="col-md-8">
                                <label >Correo Electronico</label>
                                <input  name="email" type="email" placeholder="Correo Electronico" class="form-control"required>
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-envelope-o bigicon"></i></span>
                            <div class="col-md-8">
                                <label >Duda o Comentario</label>
                                <textarea name="coment" type="text" class="form-control" required rows="7"></textarea>
                            </div>
                        </div>
                        

                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <button type="submit" class="btn btn-lg btn-primary" >ENVIAR</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>